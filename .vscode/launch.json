{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Cucumber",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "bundle",
            "windows": {
                "runtimeExecutable": "C:\\path\\to\\ruby.exe"
            },
            "runtimeArgs": ["exec", "cucumber"],
            "args": [],
            "console": "integratedTerminal"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}
